{
    "name": "Me lo dijo Pérez",
    "version": "1.0",
    "description": "Lorem ipsum dolor sit amet",
    "author": "Miguel Ángel Moyá",
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' https://cdn.rawgit.com; object-src 'self'",
    "icons": {                                              /* Icono app */
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png" 
    },
    "browser_action": {
        "default_icon": "img/icon.png",                     /* Icono barra de tareas */
        "default_popup": "popup.html",
        "default_title": "Me lo dijo Pérez"
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true,
        "open_in_tab": true
    },
    "chrome_url_overrides": {
        "newtab": "index.html"
    }
}